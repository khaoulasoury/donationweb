{% extends 'base.html.twig' %}

{% block body %}
    <!-- breadcrumb start-->
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item text-center">
                            <h2>Produits</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb start-->
    <!-- feature_part start-->
    <section class="feature_part">
        <div class="container">

         
           

            <div class="row justify-content-center">
                <div class="col-xl-8">
                    <div class="section_tittle text-center">
                        <p>Liste des produits</p>
                        <h2>Commander un produit </h2>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-xl-8">
              <!-- search form -->
                    <form class="course-search-form" id="search_form">
                        <input type="text" class="form-control" style="width:100%" id="event" placeholder="nom de produit ...." >
                        
                        
                    </form>
              </div>
                <div class="col-xl-4">
              
                    <form class="form" method="post" action="/Donation/product/tri" >
                    <div class="form-group" style="display:flex">
                            <select name="tri">
                                <option value="1">
                                    Nom 
                                </option>

                                <option value="2">
                                    Quantite 
                                </option>

                                <option value="3">
                                    Prix
                                </option>

                            </select>
                          
                            <button class="btn btn-primary" type="submit"> Trier </button>
                            </div>
                        
                    </form>
              </div>
            </div>
            <hr />
            <div class="row justify-content-center">
             <div class="row col-md-12" id="products">
            
                    {% for product in products %}
                        <div class="col-md-4" >
                            <div class="card" style="padding:10px;margin:10px">
                            <h2>{{ product.nameProduct }}  </h2>
                            <p> {{ product.descriptionProduct }} </p>
                            <h4>Quantite : {{ product.quantityRemaining }}  </h4>
                                <h4>Prix : {{ product.priceProduct }} dt </h4>
                            {% if product.quantityRemaining == 0 %}
                            <a  class="btn btn-success disabled" > Commander </a>
                            {% else %}
                            <a href="/Donation/product/command/{{ product.idProduct }}" class="btn btn-success" > Commander </a>
                            {% endif %}
                            
                            </div>
                        </div>
                    
                    {% endfor %}

                </div>
             
              
               
            </div>
        </div>
    </section>
    <!-- feature_part start-->


    <!-- intro_video_bg start-->
    <section class="intro_video_bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="intro_video_iner text-center">
                        <h2>Forget what you can get and
                            see what you can give</h2>
                        <a href="#" class="btn_2">Become a Volunteer</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- intro_video_bg part start-->


    <!--::our client part start::-->
    <section class="client_part padding_bottom">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-8">
                    <div class="section_tittle text-center">
                        <p></p>
                        <h2>Worldwide Associations</h2>
                    </div>
                </div>
            </div>
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <div class="client_logo owl-carousel">
                        <div class="single_client_logo">
                            <img src="{{asset('template/img/client_logo/Logo_1.png')}}" alt="">
                        </div>
                        <div class="single_client_logo">
                            <img src="{{asset('template/img/client_logo/Logo_2.png')}}" alt="">
                        </div>
                        <div class="single_client_logo">
                            <img src="{{asset('template/img/client_logo/Logo_3.png')}}" alt="">
                        </div>
                        <div class="single_client_logo">
                            <img src="{{asset('template/img/client_logo/Logo_4.png')}}" alt="">
                        </div>
                        <div class="single_client_logo">
                            <img src="{{asset('template/img/client_logo/Logo_5.png')}}" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--::our client part end::-->


{% endblock %}
