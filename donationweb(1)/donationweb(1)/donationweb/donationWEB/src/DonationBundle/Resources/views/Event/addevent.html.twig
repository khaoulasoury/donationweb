{% extends 'base.html.twig' %}

{% block body %}

    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item text-center">
                            <h2>Events</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb start-->
    <!-- feature_part start-->
    <section class="feature_part">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-8">
                    <div class="section_tittle text-center">
                        <h2>Add Event</h2>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                {{ form_start(form)}}

                <div>
                    <label>Event Name :</label>
                    {{ form_widget(form.nameEv,{'attr':{'type':'text','class':'form-control'}}) }}

                    <label>Event Date :</label>
                        {{ form_widget(form.dateEv, {'attr': {'type':'date'} }) }}
                    <div>
                        <br><br><br><br><br><br>
                    </div>
                    <label>equipements :</label>
                    {{ form_widget(form.equipementEv,{'attr':{'type':'text','class':'form-control'}}) }}

                <label>Description :</label>
                {{ form_widget(form.descriptionEv,{'attr':{'type':'text','class':'form-control'}}) }}

                        <label>Event Type :</label>

                {{ form_widget(form.typeEv,{'attr':{'type':'text','class':'form-control'}}) }}
                <div>
                <label class="single-input">Poster :</label>
                </div>
                    <input type="" name="picker">
                {{ form_widget(form.poster,{'attr':{'class':''}}) }}
                <br><br><br>
            <div class="row justify-content-center">
                {{ form_widget(form.submit,{'attr':{'class':'genric-btn success circle'}}) }}
                <a href="{{ path('donation_listpage') }}" class="btn_3">Close</a>
            </div>
                    {{ form_end(form)}}
    </section>





{% endblock %}