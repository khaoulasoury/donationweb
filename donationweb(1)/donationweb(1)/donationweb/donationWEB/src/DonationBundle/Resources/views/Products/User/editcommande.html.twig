{% extends 'base.html.twig' %}

{% block body %}
    <!-- breadcrumb start-->
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item text-center">
                            <h2>Commande</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb start-->
    <!-- feature_part start-->
    <section class="feature_part">
        <div class="container">

         


            <div class="row justify-content-center">
                <div class="col-xl-8">
                    <div class="section_tittle text-center">
                        <p>Commande </p>
                        <h2>Valider la commande </h2>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
             <div class="col-md-10 offset-2">
            
                 
         <form action="/Donation/product/commande/editdb" method="post">
            <h2>Produit :  {{ product.nameProduct }}</h2>
            
            <input type="hidden" value="{{ product.idProduct }}" name="idproduct">
            <input required  type="hidden"  name="idcommand" value="{{ commande.idCommand }}">
            <div class="form-group">
            <input required class="form-control" type="number" min="0" name="qteproduct" max="{{ product.quantityRemaining + commande.quantityProduct }}" value="{{ commande.quantityProduct }}">
            </div>
          
           <div class="form-group ">
              <select class="form-control col-12" name="paid">
                {% if commande.paid == 0 %}
                    <option value="0" selected >payer</option>
                    <option value="1">non payer</option>
                {% else %}
                    <option value="0">payer</option>
                    <option value="1" selected>non payer</option
                {% endif %}
                 
               
        
            </select>
          
             </div>
            
            
           <div class="form-group ">
            <button class="btn btn-primary" type="submit">Ajouter</button>
            </div>
        </form>

                
             
              
               
            </div>
        </div>
    </section>
    <!-- feature_part start-->


    <!-- intro_video_bg start-->
    <section class="intro_video_bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="intro_video_iner text-center">
                        <h2>Forget what you can get and
                            see what you can give</h2>
                        <a href="#" class="btn_2">Become a Volunteer</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- intro_video_bg part start-->


    <!--::our client part start::-->
    <section class="client_part padding_bottom">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-8">
                    <div class="section_tittle text-center">
                        <p></p>
                        <h2>Worldwide Associations</h2>
                    </div>
                </div>
            </div>
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <div class="client_logo owl-carousel">
                        <div class="single_client_logo">
                            <img src="{{asset('template/img/client_logo/Logo_1.png')}}" alt="">
                        </div>
                        <div class="single_client_logo">
                            <img src="{{asset('template/img/client_logo/Logo_2.png')}}" alt="">
                        </div>
                        <div class="single_client_logo">
                            <img src="{{asset('template/img/client_logo/Logo_3.png')}}" alt="">
                        </div>
                        <div class="single_client_logo">
                            <img src="{{asset('template/img/client_logo/Logo_4.png')}}" alt="">
                        </div>
                        <div class="single_client_logo">
                            <img src="{{asset('template/img/client_logo/Logo_5.png')}}" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--::our client part end::-->


{% endblock %}


      


            
       

