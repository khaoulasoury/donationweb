         <form action="/Donation/product/editdb/{{ product.idProduct }}" method="post">
            <div class="form-group">
            <label> Nom produit </label>
            <input class="form-control" type="text" name="nameproduct" id="" value="{{ product.nameProduct }}">
            </div>
            <div class="form-group">
            <label> Quantite produit </label>
            <input class="form-control" type="number" min="0" name="qteproduct" id="" value="{{ product.quantityTotal }}">
            </div>
            <div class="form-group">
            <label> Quantite restant produit </label>
            <input class="form-control" type="number" min="0" name="restproduct" id="" value="{{ product.quantityRemaining }}">
            </div>
            <div class="form-group">
            <label> Prix produit </label>
             <input class="form-control" type="number" min="0" name="prixproduct" id="" value="{{ product.priceProduct }}">
            </div>

            <div class="form-group">
            <label> Description produit </label>
            <textarea class="form-control" name="descriptionproduct">{{ product.descriptionProduct }}</textarea>
            </div>
            <div class="form-group">
            <label> Association </label>
              <select class="form-control" name="idassociation">
            {% for association in associations %}
                {% if association.idAssociation == product.idAssociation.idAssociation %}
                <option selected value="{{ association.idAssociation }}">{{ association.nomAssociation }}</option>
                {% else %}
                 <option value="{{ association.idAssociation }}">{{ association.nomAssociation }}</option>
                {% endif %}
            {% endfor %}
            </select>
            </div>
            
            
            
           
            <button class="btn btn-primary">Modifier</button>
           
        </form>
           


