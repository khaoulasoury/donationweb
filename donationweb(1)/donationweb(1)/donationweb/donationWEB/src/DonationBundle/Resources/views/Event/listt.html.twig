                                <img class="img-fluid" src="{{ asset('uploads/post/' ~ posts.poster) }}" alt=""></a>

                                <div class="card-body">

                                    <ul>
                                        <div class="user-name">
                                            <a href="#"><i class="lni-user"></i>{{ posts.nameEv }}</a>
                                        </div>
                                        <li><img src="img/icon/passion_2.svg" alt=""> Description:</li>
                                        <li><img src="img/icon/passion_1.svg" alt=""> {{ posts.descriptionEv }}</li>
                                    </ul>
                                    <a href="{{ path('donation_detailspage',{'id': posts.idEv}) }}"><button type="button" class="btn btn-outline-primary">Details</button></a>

                                </div>
                            </div>
                        </div>
