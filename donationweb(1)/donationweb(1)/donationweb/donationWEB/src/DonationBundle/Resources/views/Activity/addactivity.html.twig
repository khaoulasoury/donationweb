{% extends 'base.html.twig' %}

{% block body %}

    <!-- breadcrumb start-->
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item text-center">
                            <h2>Events</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb start-->
    <!-- feature_part start-->

    <section class="feature_part">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-8">
                    <div class="section_tittle text-center">
                        <h2>Add Activity</h2>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                {{ form_start(temp)}}

                <div>
                    <label>Event Name :</label>
                   <br>
                    {{ form_widget(temp.nameEv,{'attr':{'type':'text','class':'form-control'}}) }}
                    <br><br><br>
                </div>
                    <label>Activity Name :</label>
                    <br>
                    {{ form_widget(temp.nameAc,{'attr':{'type':'text','class':'form-control'}})  }}
                    <div>
                        <label>Duration :</label>
                        {{ form_widget(temp.duration,{'attr':{'type':'text','class':'form-control'}}) }} <br>
                    </div>
                    <label>Activity Type :</label>
                    {{ form_widget(temp.typeAc,{'attr':{'type':'text','class':'form-control'}}) }}

                    <label>Description :</label>
                    {{ form_widget(temp.descriptionAc,{'attr':{'type':'text','class':'form-control'}}) }}

                    <div class="row justify-content-center">
                        {{ form_widget(temp.submit,{'attr':{'class':'genric-btn success circle'}}) }}
                        <a href="{{ path('donation_listpage') }}" class="btn_3">Close</a>
                    </div>
                    {{ form_end(temp)}}
                </div>
            </div>
        </div>
    </section>




{% endblock %}